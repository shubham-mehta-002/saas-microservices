{
  "name": "project-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "client",
    "server/api-gateway",
    "server/services/*",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev-client\" \"npm:dev-server\"",

    "dev-service-discovery": "consul agent -dev",

    "dev-client": "npm run dev -w client",

    "dev-server": "concurrently \"npm:dev-auth\" \"npm:dev-product\"",
    "dev-api": "npm run dev -w server/api-gateway",
    "dev-auth": "npm run dev -w server/services/auth-service",
    "dev-product": "npm run dev -w server/services/product-service",

    "build:shared": "tsc -b shared",

    "build:auth": "tsc -b server/services/auth-service",
    "build:product": "tsc -b server/services/product-service",
    "build:api": "tsc -b server/api-gateway",

    "start:auth": "node server/services/auth-service/dist/index.js",
    "start:product": "node server/services/product-service/dist/index.js",
    "start:api": "node server/api-gateway/dist/index.js",

    "build": "npm run build:shared && npm run build:auth && npm run build:product && npm run build:api"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
